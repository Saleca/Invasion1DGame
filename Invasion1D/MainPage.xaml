<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Invasion1D.Controls"
             x:Class="Invasion1D.MainPage"
             Style="{StaticResource ContentPage}">

    <Grid RowDefinitions="2*,6*,2*">
        

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            ColumnDefinitions="8*,*">
            <Grid 
                x:Name="StatsGrid"
                Grid.Column="0"
                RowDefinitions="*,*,*,*"
                ColumnDefinitions="*,*,*"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Margin="5"
                IsVisible="false">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Time"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    x:Name="TimeLabel"/>

                <Label
                     Grid.Row="0"
                     Grid.Column="1"
                     Text="Warpium"/>
                <HorizontalStackLayout
                    x:Name="WarpiumContainer"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalOptions="Center"/>

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Health"/>
                <ContentView
                    x:Name="HealthProgressBarContainer"
                    Grid.Row="3"
                    Grid.Column="0"/>

                <Label
                     Grid.Row="2"
                     Grid.Column="1"
                     Text="Vitalux"/>
                <ContentView
                     x:Name="VitaluxProgressBarContainer"
                     Grid.Row="3"
                     Grid.Column="1"/>


                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    Text="Enemies"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    x:Name="EnemiesLabel"/>

                <Label
                     Grid.Row="2"
                     Grid.Column="2"
                     Text="Weave"/>

                <ContentView
                    x:Name="WeaveCooldownProgressBarContainer"
                    Grid.Row="3"
                    Grid.Column="2"/>

            </Grid>
            <Grid Grid.Column="1"
                  RowDefinitions="*,*">
                <Button
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Text="Start"
                    Clicked="StartClicked"
                    x:Name="StartKey"/>

                <Button
                    Grid.Row="1"
                    Text="Map"
                    Clicked="MapModeClicked"
                    x:Name="MapModeKey"
                    IsVisible="false"/>
            </Grid>
        </Grid>

        <Grid 
            Grid.Row="1"
            ColumnDefinitions="*,*"
            Margin="5,0"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <Frame 
                Grid.ColumnSpan="2"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                Style="{StaticResource MainFrame}"
                x:Name="PlayerView">
            </Frame>

            <AbsoluteLayout
                Grid.ColumnSpan="2"
                IsVisible="false"
                Padding="0"
                x:Name="MapView"/>
        </Grid>

        <Grid
            x:Name="ControlsGrid"
            RowDefinitions="*,*"
            ColumnDefinitions="*,*"
            Grid.Row="2"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            IsVisible="false">
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Text="&lt;--"
                Pressed="NegPressed"
                Released="NegReleased"
                x:Name="NegKey"/>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Text="-->"
                Pressed="PosPressed"
                Released="PosReleased"
                x:Name="PosKey"/>
            <Grid 
                Grid.Row="1"
                Grid.Column="0">
                <ContentView
                    x:Name="ShootCooldownProgressBarContainer"/>
                <Button 
                    x:Name="ShootKey"
                    Text="Shoot"
                    Clicked="ShootClicked"/>
            </Grid>

            <Grid 
                Grid.Row="1"
                Grid.Column="1">
                <ContentView
                    x:Name="WarpCooldownProgressBarContainer"/>
                <Button
                    x:Name="WarpKey"
                    Text="Warp"
                    Clicked="WarpClicked"/>
            </Grid>
        </Grid>
        
        <Label 
            Grid.RowSpan="3"
            x:Name="MainLabel"
            IsVisible="false"/>
    </Grid>
</ContentPage>