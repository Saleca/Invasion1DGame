<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Vitalux">#990</Color>
    <Color x:Key="Warpium">#099</Color>
    <Color x:Key="Weave">#909</Color>
    <Color x:Key="Health">#900</Color>
    <Color x:Key="Enemy">#009</Color>
    <Color x:Key="Player">#090</Color>

    <Color x:Key="White">#fff</Color>
    <Color x:Key="Light">#bbb</Color>
    <Color x:Key="MidLight">#999</Color>
    <Color x:Key="Gray">#777</Color>
    <Color x:Key="MidDark">#555</Color>
    <Color x:Key="Dark">#333</Color> 
    <Color x:Key="Black">#000</Color>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource Light}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource Dark}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

</ResourceDictionary>