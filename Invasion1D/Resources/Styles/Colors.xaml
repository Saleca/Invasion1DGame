<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Vitalux">#ff0</Color>
    <Color x:Key="Warpium">#00f</Color>
    <Color x:Key="Enemy">#f00</Color>
    <Color x:Key="Player">#0f0</Color>

    <Color x:Key="White">#fff</Color>
    <Color x:Key="Light">#bbb</Color>
    <Color x:Key="Gray">#888</Color>
    <Color x:Key="Dark">#444</Color>
    <Color x:Key="Black">#000</Color>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource Light}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource Dark}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

</ResourceDictionary>