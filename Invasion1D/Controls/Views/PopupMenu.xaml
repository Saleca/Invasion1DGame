<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Invasion1D.Controls"
    x:Class="Invasion1D.Controls.PopupMenu"
    Style="{StaticResource BaseFrame}">
    <AbsoluteLayout>
        <Grid
            AbsoluteLayout.LayoutBounds=".5,.5,1,1"
            AbsoluteLayout.LayoutFlags="All"
            RowDefinitions="*,auto">
            <Label
                x:Name="TitleLabel"
                Style="{StaticResource Title}"/>
            <ContentView 
                Grid.Row="1"
                x:Name="MenuContentView"/>
        </Grid>
        <Frame
            x:Name="ModalPage"
            AbsoluteLayout.LayoutBounds=".5,.5,1,1"
            AbsoluteLayout.LayoutFlags="All"
            IsVisible="False"
            Style="{StaticResource OverlayMenu}">
            <Grid
                RowDefinitions="*,auto">
                <ContentView 
                    x:Name="ModalView"/>
                <Button
                    Text="Back"
                    Clicked="BackButton_Clicked"
                    Grid.Row="1"
                    Style="{StaticResource VerticalMenuButton}"/>
            </Grid>
        </Frame>
    </AbsoluteLayout>
</Frame>