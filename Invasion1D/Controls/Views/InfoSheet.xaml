<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Invasion1D.Controls.Views"
    x:Class="Invasion1D.Controls.Views.InfoSheet">
    <VerticalStackLayout>
        <local:InfoItem
            ItemName="Player"
            ItemColor="{StaticResource Player}"/>
        <local:InfoItem
            ItemName="Enemy"
            ItemColor="{StaticResource Enemy}"/>
        <local:InfoItem
            ItemName="Vitalux"
            ItemColor="{StaticResource Vitalux}"/>
        <local:InfoItem
            ItemName="Weave"
            ItemColor="{StaticResource Weave}"/>
        <local:InfoItem
            ItemName="Heath"
            ItemColor="{StaticResource Health}"/>
        <local:InfoItem
            ItemName="Warpium"
            ItemColor="{StaticResource Warpium}"/>
    </VerticalStackLayout>
</ContentView>
