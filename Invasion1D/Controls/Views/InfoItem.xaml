<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Invasion1D.Controls"
    Style="{StaticResource MenuItem}"
    x:Class="Invasion1D.Controls.Views.InfoItem">
    <Grid
        ColumnDefinitions="50,auto,*">
        <RoundRectangle 
            x:Name="ItemColorView"
            BackgroundColor="{StaticResource Vitalux}"
            CornerRadius="5"/>
        <local:Space 
            Grid.Column="1"
            Style="{StaticResource VerticalSeparator}"/>
        <Label 
            x:Name="ItemNameView"
            Grid.Column="2"
            Text="Vitalux"/>
    </Grid>
</Frame>
