<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Invasion1D.Controls"
    x:Class="Invasion1D.Controls.SeedView"
    Style="{StaticResource VerticalMenuFrame}">
    <Grid
        ColumnDefinitions="*,*">
        <Label 
             Text="Seed"
             Grid.Column="0"/>
        <local:UnderLineEntry
            x:Name="UnderLineControl"
            UnderlineColor="{AppThemeBinding Dark={StaticResource Light}, Light={StaticResource Dark}}"
            Grid.Column="1">
            <Entry
                 x:Name="SeedEntry"
                 Text="0"
                 TextChanged="SeedEntry_TextChanged"
                 Completed="SeedEntry_Completed"
                 Focused="SeedEntry_Focused"/>
        </local:UnderLineEntry>
    </Grid>
</Frame>
