<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Invasion1D.Views.StartMenu"
             Title="Start Menu">
    <Grid
        RowDefinitions="2*,*,*,*,*,2*"
        ColumnDefinitions="3*,*,3*">
        <Label Text="Start Menu"
               Grid.Row="1"
               Grid.Column="1"/>

        <Button
            Grid.Row="3"
            Grid.Column="1"
            Text="Start"
            Clicked="Start_Clicked"
            x:Name="Start"
            Padding="20,10"/>

        <Button
            Grid.Row="4"
            Grid.Column="1"
            Text="Tutorial"
            Clicked="Tutorial_Clicked"
            x:Name="Tutorial"
            Padding="20,10"
            IsEnabled="False"/>
    </Grid>
</ContentPage>