<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Invasion1D.Controls"
             xmlns:views="clr-namespace:Invasion1D.Controls.Views"
             x:Class="Invasion1D.Pages.StartMenu"
             Style="{StaticResource ContentPage}"
             Title="Start Menu">
    <views:PopupMenu
        Title="Start Menu"
        x:Name="Menu">
        <views:PopupMenu.MenuContent>
            <Label 
                Text="A true one dimentional shooter game"/>
            <local:Space Style="{StaticResource MenuSpace}"/>
            <Button
                x:Name="Start"
                Text="Start"
                Clicked="Start_Clicked"
                Style="{StaticResource VerticalMenuButton}"/>
            <Button
                Text="How to play"
                Clicked="Tutorial_Clicked"
                Style="{StaticResource VerticalMenuButton}"/>
            <Button 
                 Text="Settings"
                 Clicked="SettingsButton_Clicked"
                 Style="{StaticResource VerticalMenuButton}"/>
            <Button
                x:Name="PrivacyPolicy"
                Text="Privacy Policy"
                Clicked="PrivacyPolicy_Clicked"
                Style="{StaticResource VerticalMenuButton}"/>
        </views:PopupMenu.MenuContent>
    </views:PopupMenu>
</ContentPage>