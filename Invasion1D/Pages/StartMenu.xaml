<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Invasion1D.Controls"
             x:Class="Invasion1D.Pages.StartMenu"
             Style="{StaticResource ContentPage}"
             Title="Start Menu">
    <local:PopupMenu
        x:Name="Menu">
        <local:PopupMenu.MenuContent>
            
            <local:Space HeightRequest="50"/>
            <Button
                x:Name="Start"
                Text="Start"
                Clicked="Start_Clicked"
                Style="{StaticResource VerticalMenuButton}"/>
            <Button
                Text="Tutorial"
                Clicked="Tutorial_Clicked"
                Style="{StaticResource VerticalMenuButton}"/>
            <Button 
                 Text="Settings"
                 Clicked="SettingsButton_Clicked"
                 Style="{StaticResource VerticalMenuButton}"/>
            <Button
                x:Name="PrivacyPolicy"
                Text="Privacy Policy"
                Clicked="PrivacyPolicy_Clicked"
                Style="{StaticResource VerticalMenuButton}"/>
        </local:PopupMenu.MenuContent>
    </local:PopupMenu>
</ContentPage>