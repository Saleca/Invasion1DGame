<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Invasion1D.Controls"
             xmlns:views="clr-namespace:Invasion1D.Controls.Views"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="Invasion1D.Pages.Invasion1dUI"
             Style="{StaticResource ContentPage}"
             Title="Invasion 1D">

    <Grid RowDefinitions="2*,6*,2*">
        <Grid 
            x:Name="StatsGrid"
            Grid.Column="0"
            RowDefinitions="*,*"
            IsVisible="false">
            <Grid 
                Grid.Row="0"
                RowDefinitions="*,*"
                ColumnDefinitions="*,*,*,*">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Time"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    x:Name="TimeLabel"/>

                <Label
                     Grid.Row="0"
                     Grid.Column="1"
                     Text="Warpium"/>
                <HorizontalStackLayout
                    x:Name="WarpiumContainer"
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource WarpiumContainer}"/>

                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    Text="Enemies"/>
                <Label
                    x:Name="EnemiesLabel"
                    Grid.Row="1"
                    Grid.Column="2"/>
                <Button 
                    x:Name="PauseButton"
                    Text="P"
                    Grid.Column="3"
                    Grid.RowSpan="2"
                    Clicked="PauseButtonClicked"/>
            </Grid>

            <Grid 
                Grid.Row="1"
                RowDefinitions="*,*"
                ColumnDefinitions="*,*">
                <Label
                    Text="Health"
                    Grid.Row="0"
                    Grid.Column="0"/>
                <local:InvertedProgressBar
                    x:Name="HealthProgressBar"
                    ProgressBarColor="{StaticResource Health}"
                    Progress="1"
                    Grid.Row="1"
                    Grid.Column="0"/>

                <Label
                    Text="Vitalux"
                    Grid.Row="0"
                    Grid.Column="1"/>
                <local:InvertedProgressBar
                    x:Name="VitaluxProgressBar"
                    ProgressBarColor="{StaticResource Vitalux}"
                    Progress="1"
                    Grid.Row="1"
                    Grid.Column="1"/>
            </Grid>
        </Grid>

        <Frame 
            x:Name="MainFrame"
            Grid.Row="1">
            <AbsoluteLayout>
                <Frame
                    x:Name="PlayerView"
                    android:VisualElement.Elevation="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Light}, Dark={StaticResource Dark}}"
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                    AbsoluteLayout.LayoutFlags="PositionProportional"/>

                <AbsoluteLayout
                    x:Name="MapView"/>
            </AbsoluteLayout>
        </Frame>

        <Grid
            x:Name="ControlsGrid"
            RowDefinitions="*,*"
            ColumnDefinitions="*,*"
            Grid.Row="2"
            IsVisible="false">
            <Button
                x:Name="NegKey"
                Grid.Row="0"
                Grid.Column="0"
                Text="&lt;--"
                Pressed="NegativeDirectionPressed"
                Released="DirectionButtonReleased"/>
            <Button
                x:Name="PosKey"
                Grid.Row="0"
                Grid.Column="1"
                Text="-->"
                Pressed="PositiveDirectionPressed"
                Released="DirectionButtonReleased"/>
            <Grid 
                Grid.Row="1"
                Grid.Column="0">
                <local:InvertedProgressBar
                    x:Name="ShootCooldownProgressBar"
                    ProgressBarColor="{StaticResource Vitalux}"/>
                <Button 
                    x:Name="ShootKey"
                    Text="Shoot"
                    Clicked="ShootClicked"/>
            </Grid>

            <Grid 
                Grid.Row="1"
                Grid.Column="1">
                <local:InvertedProgressBar
                    x:Name="WarpCooldownProgressBar"
                    ProgressBarColor="{StaticResource Warpium}"/>
                <Button
                    x:Name="WarpKey"
                    Text="Warp"
                    Clicked="WarpClicked"/>
            </Grid>
        </Grid>

        <views:PopupMenu
            x:Name="Menu"
            Title="Pause"
            Grid.RowSpan="3"
            IsVisible="False"
            Style="{StaticResource ConstrainedOverlayMenu}">
            <views:PopupMenu.MenuContent>
                <Button 
                    x:Name="ContinueButton"
                    Text="Continue"
                    Clicked="PauseButtonClicked"
                    Style="{StaticResource VerticalMenuButton}"/>
                <Button
                    x:Name="RestartKey"
                    Text="Restart"
                    Clicked="RestartClicked"
                    Style="{StaticResource VerticalMenuButton}"/>
                <Button
                    Text="Info sheet"
                    Clicked="InfoSheetButton_Clicked"
                    Style="{StaticResource VerticalMenuButton}"/>
                <Button 
                    x:Name="SettingsButton"
                    Text="Settings"
                    Clicked="SettingsButton_Clicked"
                    Style="{StaticResource VerticalMenuButton}"/>
                <Button
                    x:Name="LaunchPage"
                    Text="Quit"
                    Clicked="LaunchPage_Clicked"
                    Style="{StaticResource VerticalMenuButton}"/>
            </views:PopupMenu.MenuContent>
        </views:PopupMenu>
    </Grid>
</ContentPage>